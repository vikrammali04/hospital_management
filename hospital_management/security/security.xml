<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hide_menu" model="res.groups">
        <field name="name">Hospital Patient</field>
    </record>
    <record id="menu_hospital" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('hide_menu'))]"/>
    </record>
    <record model="ir.rule" id="rule_hide_hospitals_details">
        <field name="name">Hide Hospitals Details Menu</field>
        <field name="model_id" ref="model_res_partner"/>
        <field name="groups" eval="[(4, ref('group_hospital_doctors'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
        <field name="domain_force">[(1, '=', 0)]</field>
    </record>

</odoo>



